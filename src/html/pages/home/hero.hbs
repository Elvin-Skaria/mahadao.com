<script> 

$('.count').each(function() {
  var speed = 1500;

  function change() {
    speed = 2000;
  }
  setTimeout(change, 2000);
  $(this).prop('Counter', 0).animate({
    Counter: $(this).data('number')
  }, {
    duration: speed,
    easing: 'swing',
    step: function(now) {
      $(this).text(Math.ceil(now).toLocaleString('en'));
    }
  });
});
</script>

