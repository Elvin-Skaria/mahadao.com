		 <div class="timer_box"><div class="timer_number" id="timerDays">   </div> <span class="timer_text">Days   </span></div>
		 <div class="timer_box"><div class="timer_number" id="timerHours">  </div> <span class="timer_text">Hours  </span></div>
		 <div class="timer_box"><div class="timer_number" id="timerMinutes"></div> <span class="timer_text">Minutes</span></div>
		 <div class="timer_box"><div class="timer_number" id="timerSeconds"></div> <span class="timer_text">Seconds</span></div>
	</div>
	
	<div class="button1" id="timer-1-button" data-aos="fade-up" data-aos-duration="1000" data-aos-once="true"></div>	
