<script>
  function onDateClick (event) {
    allCLickedClasses = $(event).attr("class");
    var elementNo = 0;
    if(allCLickedClasses.includes("roadmap-title-1")) {
      elementNo = 1;
    } else if (allCLickedClasses.includes("roadmap-title-2")) {
      elementNo = 2;
    } else if (allCLickedClasses.includes("roadmap-title-3")) {
      elementNo = 3;
    } else if (allCLickedClasses.includes("roadmap-title-4")) {
      elementNo = 4;
    }
    for (i=1; i<5; i++ ) {
      var title = '.roadmap-title-' + i;
      var lists = '.roadmap-lists-' + i;
      var circle = '.roadmap-circle-' + i;
      if (elementNo === i) {
        console.log('if element no', elementNo, i);
        $(title).removeClass("inactive");
        $(lists).removeClass("inactive");
        $(circle).removeClass("inactive-c");
      } else {
        console.log('else element no', elementNo, i);
        $(title).addClass("inactive");
        $(lists).addClass("inactive");
        $(circle).addClass("inactive-c");
      }
    }
  }

</script>

